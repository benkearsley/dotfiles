# ğŸ–¼ï¸ SketchyBar
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
## â˜• Theme: homemade Catpuccin Machiatto
## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
CONFIG_DIR="/Users/ben.kearsley/.config/sketchybar"

# Source the theme file to get color variables
source "${CONFIG_DIR}/themes/catppuccin-macchiato.sh"

## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
## Bar Properties. 
##
## See: https://felixkratz.github.io/SketchyBar/config/bar
## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
sketchybar --bar position=top \
                 height=35 \
                 color="${_SSDF_CM_MANTLE}" \
                 sticky=on \
                 topmost=on \
                 display=all \
                 hidden=off \
                 y_offset=0 \
                 margin=0 \
                 blur_radius=0 \
                 padding_left=0 \
                 padding_right=0

## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
## Item Properties. 
##
## See: https://felixkratz.github.io/SketchyBar/config/items
## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
default=(
  padding_left=5
  padding_right=5
  icon.font="JetBrainsMono Nerd Font:Bold:14.0"
  label.font="JetBrainsMono Nerd Font:Bold:11.0"
  icon.color="${_SSDF_CM_SUBTEXT_1}"
  label.color="${_SSDF_CM_SUBTEXT_1}"
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
)


sketchybar --default "${default[@]}"

##### Adding aerospace layouts #####

# Add the aerospace_workspace_change event specified in aerospace.toml
sketchybar --add event aerospace_workspace_change

# Count available monitors
monitor_count=$(aerospace list-monitors --format "%{monitor-appkit-nsscreen-screens-id}" | wc -l)

# Add workspaces for all monitors
for monitor in $(aerospace list-monitors --format "%{monitor-appkit-nsscreen-screens-id}"); do
  for sid in $(aerospace list-workspaces --monitor "$monitor"); do
    # Determine which display this workspace should be shown on
    # If only one monitor (built-in), show all workspaces on display 1
    # If multiple monitors:
    # Display 1 (Monitor 1 - Built-in): workspaces 1-2
    # Display 2 (Monitor 2 - LG ULTRAFINE 2): workspaces 6-7
    # Display 3 (Monitor 3 - LG ULTRAFINE 1): workspaces 3-5
    display_id="1"
    
    if [ "$monitor_count" -eq 1 ]; then
      # Single monitor: show all workspaces on built-in display
      display_id="1"
    else
      # Multiple monitors: use original distribution logic
      if [ "$sid" -ge 1 ] && [ "$sid" -le 2 ]; then
        display_id="1"  # Built-in display
      elif [ "$sid" -ge 3 ] && [ "$sid" -le 5 ]; then
        display_id="3"  # LG ULTRAFINE (1) display
      elif [ "$sid" -ge 6 ] && [ "$sid" -le 7 ]; then
        display_id="2"  # LG ULTRAFINE (2) display
      fi
    fi
    
    sketchybar --add item space.$sid left \
      --set space.$sid display="$display_id" \
      --subscribe space.$sid aerospace_workspace_change \
      --set space.$sid \
      drawing=on \
      background.color=0x44ffffff \
      background.corner_radius=5 \
      background.drawing=on \
      background.border_color=0xAAFFFFFF \
      background.border_width=0 \
      background.height=25 \
      icon="$sid" \
      icon.padding_left=10 \
      label.font="sketchybar-app-font:Regular:11.0" \
      label.padding_right=20 \
      label.padding_left=0 \
      label.y_offset=-1 \
      click_script="aerospace workspace $sid" \
      script="$CONFIG_DIR/plugins/workspaces.sh $sid"
  done
done

# Load Icons on startup for all monitors
for monitor in $(aerospace list-monitors --format "%{monitor-appkit-nsscreen-screens-id}"); do
  for sid in $(aerospace list-workspaces --monitor "$monitor" --empty no); do
    apps=$(aerospace list-windows --workspace "$sid" | awk -F'|' '{gsub(/^ *| *$/, "", $2); print $2}')

    sketchybar --set space.$sid drawing=on

    icon_strip=" "
    if [ "${apps}" != "" ]; then
      while read -r app; do
        icon_strip+=" $($CONFIG_DIR/plugins/icon_map_fn.sh "$app")"
      done <<<"${apps}"
    else
      icon_strip=""
    fi
    sketchybar --set space.$sid label="$icon_strip"
  done
done


